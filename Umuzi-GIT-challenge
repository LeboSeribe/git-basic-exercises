MULTIPLE REPOS
git log
cd ~/git-basic-exercises
mkdir this-will-be-another-repo
cd this-will-be-another-repo
git init
touch README.md
git add README.md
git commit -m "added readme file"
cd ~/git-basic-exercises
git log

GITIGNORE
touch ignore-me.db
git status
nano .gitignore
ignore-me.db
git status
mkdir large-directory-that-should-be-local-only
cd large-directory-that-should-be-local-only
touch readme.md
echo "you are awesome" > readme.md
cd..
git status
nano .gitignore
/large-directory-that-should-be-local-only
