

YOUR INTIAL COMMIT

mkdir git-basic-excersises
cd git-basic-excersises
ls -a
git init
ls -a
git init
touch README.md
ls -a
git status
git log
git add README.md
git status
git rm --cached README.md
git status
git add README.md
git status
git commit -m "initial commit"
git log

 
MORE COMMITS
nano README.md
cat README.md
git status
git add README.md
git commit -m "second commit"
echo "I had to learn">> README.md
git status
git add README.md
git commit -m "third commit"

CHECK THIS OUT
git log
git checkout 6c5af22af922d3d2d7bfa401b749db59e5111825

cat README.md
git checkout master
cat README.md


BRANCHING
git branch
git branch milkshake-flavours
git branch
git check out milkshake-flavours
nano milkshakes.md
git status

git add milkshakes.md
git commit -m "added initial flavours"
git status
git log

git check out master
git branch history
git checkout history
git log

history > history.tx
git add history.txt
git commit -m "added history"
git log

git checkout milkshake-flavours
echo " what is happening now?" >> README.md
git status 

git add README.md
git commit -m "random readme changes"
git checkout history
cat README.md
rm README.md
echo "booya" > README.md
git commit -m "rewrote readme"	

